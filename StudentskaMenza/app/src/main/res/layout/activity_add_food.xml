<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.AddFoodActivity">

    <Button
            android:text="Uplati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnUplati" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:onClick="uplati" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="213dp"
            android:layout_height="49dp"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/dorucakValue"
            android:hint="Dorucak"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/rucakValue" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginTop="150dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/rucakValue"
            android:hint="Rucak"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/veceraValue"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number|textPersonName"
            android:ems="10"
            android:id="@+id/veceraValue"
            android:hint="Vecera"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="99dp" android:layout_marginBottom="118dp"
            app:layout_constraintBottom_toTopOf="@+id/btnUplati" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="99dp"/>
</android.support.constraint.ConstraintLayout>