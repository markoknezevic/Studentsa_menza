<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.SettingsActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/linearLayout" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

        <TextView
                android:text="Dorucak (pocetak/kraj)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/dorS" android:onClick="dorucakS"
                android:gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/dorE" android:gravity="center"
                android:onClick="dorucakE"/>
        <TextView
                android:text="Rucak (pocetak/kraj)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/rucS" android:gravity="center"
                android:onClick="rucakS"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/rucE" android:gravity="center"
                android:onClick="rucakE"/>
        <TextView
                android:text="Vecera (pocetak/kraj)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:gravity="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/vecS" android:gravity="center"
                android:onClick="veceraS"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="45dp" android:id="@+id/vecE" android:gravity="center"
                android:onClick="veceraE"/>
        <Button
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnSave" android:onClick="saveSettings"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>